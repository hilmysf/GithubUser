<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/Card"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/tv_name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/img_user"
            android:text="@string/nama_user"
            android:textColor="@color/Background"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/logo_username"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/tv_name_detail"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/img_user"
            android:src="@drawable/ic_baseline_alternate_email_24" />

        <TextView
            android:id="@+id/tv_username_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_detail"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/logo_username"
            android:text="@string/username_user"
            android:textColor="@color/Background"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/logo_location"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/logo_username"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/img_user"
            android:src="@drawable/ic_baseline_location_on_24" />

        <TextView
            android:id="@+id/tv_location_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_username_detail"
            android:layout_marginStart="2dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@id/logo_location"
            android:text="@string/location_user"
            android:textColor="@color/Background"
            android:textSize="14sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>